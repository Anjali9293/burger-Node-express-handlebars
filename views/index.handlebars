<h1>Eat-Da-Bruger!</h1>
<div class="container">
<div class="row">
<div class="col-6">
<ul class="list-group">
  {{#each burgers}}
    {{#unless this.devoured}}
            <button data-id="{{this.id}}" class="btn btn-warning devourBurger">{{this.id}} {{this.burger_name}}</button>
      {{/unless}}
  {{/each}}
</ul>
</div>
</div>
<!-- Pass in data from server.js -->
<br /><hr />

    <div class="row">
        <div class="col-12">
            <form class="create-form">
            <div class="mx-sm-3 mb-3">
                <label for="Name" class="form-label">Burger Name</label>
                <input type="text" class="form-control" rows="3" id="Name" name="Name" placeholder="Yummy Burger">
            </div>
            <button type="submit" class="btn btn-primary">Add Burger</button>
            <p>Enter the name of the burger that you want to eat and click on Add Burger</p>
            </form>
        </div>
    </div>
</div>